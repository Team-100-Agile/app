<script>
    document.addEventListener("DOMContentLoaded", function() {
        const searchInput = document.getElementById("search-bar");
        const faqItems = document.querySelectorAll(".faq-item");
        let currentMatchIndex = -1;

        searchInput.addEventListener("keydown", function(event) {
            if (event.key === "Enter") {
                event.preventDefault(); 

                const searchTerm = searchInput.value.toLowerCase();

                if (currentMatchIndex >= 0) {
                    faqItems[currentMatchIndex].classList.remove("highlight");
                }

                currentMatchIndex = -1;

                for (let i = 0; i < faqItems.length; i++) {
                    const faqItem = faqItems[i];
                    const faqText = faqItem.textContent.toLowerCase();

                    if (faqText.includes(searchTerm)) {
                        currentMatchIndex = i;
                        faqItem.classList.add("highlight");
                        faqItem.scrollIntoView({ behavior: "smooth", block: "start" });
                        break;
                    }
                }
            }
        });
    });
</script>

